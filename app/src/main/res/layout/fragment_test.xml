                android:layout_marginLeft="30dp"
                android:text="@string/no" />



        </RadioGroup>

        <!-- 8. Covid Experience -->
        <TextView
            android:id="@+id/select_covidexp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
